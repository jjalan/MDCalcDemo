<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_login"
        style="@style/LoginActivity"
        tools:context="com.yoaccess.mdcalcdemo.ui.LoginActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_above="@+id/activity_login_copyright_text">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/logo"
                   android:layout_marginBottom="48dp"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="Email"
                  android:inputType="textEmailAddress"
                  android:layout_marginBottom="16dp"
                  android:id="@+id/activity_login_username"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="Password"
                  android:inputType="textPassword"
                  android:layout_marginBottom="32dp"
                  android:id="@+id/activity_login_password"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG IN"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/login_button_background"
                android:textAlignment="center"
                android:layout_marginBottom="32dp"
                android:id="@+id/activity_login_submit_button"
                android:onClick="onLoginButtonClicked"/>
    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="\u00A9 MD AWARE 2016. ALL RIGHTS RESERVED. PATENT PENDING."
              android:layout_alignParentBottom="true"
              android:textAlignment="center"
              android:textStyle="bold"
              android:layout_marginTop="16dp"
              android:id="@id/activity_login_copyright_text"/>

</RelativeLayout>
